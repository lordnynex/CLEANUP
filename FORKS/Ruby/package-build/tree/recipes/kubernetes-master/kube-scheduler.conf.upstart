description "Kube-Scheduler service"
author "@jainvipin"

# respawn

# start in conjunction with etcd
start on started kube-apiserver
stop on stopping kube-apiserver

pre-start script
	# see also https://github.com/jainvipin/kubernetes-start
	KUBE_SCHEDULER=/usr/bin/$UPSTART_JOB
	if [ -f /etc/default/$UPSTART_JOB ]; then
		. /etc/default/$UPSTART_JOB
	fi
	if [ -f $KUBE_SCHEDULER ]; then
		exit 0
	fi
    exit 22
end script

script
	# modify these in /etc/default/$UPSTART_JOB (/etc/default/docker)
	KUBE_SCHEDULER=/usr/bin/$UPSTART_JOB
	KUBE_SCHEDULER_OPTS=""
	if [ -f /etc/default/$UPSTART_JOB ]; then
		. /etc/default/$UPSTART_JOB
	fi
	exec "$KUBE_SCHEDULER" $KUBE_SCHEDULER_OPTS
end script
